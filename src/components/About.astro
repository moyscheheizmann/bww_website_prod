---
import siteData from '../content/site/general.json';
const { about, founders } = siteData;
---

<section class="about bg-beige" id="about">
    <div class="container">
        <h2 class="section-title text-raisin">Über uns</h2>
        <div class="about-images-row">
            <img src={founders.image} alt="GründerInnen der Bewegungswelten" class="about-dual-image" loading="lazy">
            <img src={about.image} alt="Bewegungswelten Alte Dosenfabrik Gebäude" class="about-dual-image" loading="lazy">
        </div>
        <div class="about-text-block">
            <p class="lead-text">{about.leadText}</p>
            <p>{founders.textParagraph1}</p>
            <p>{founders.textParagraph2}</p>
        </div>
        <div class="section-closing" style="max-width: 900px; margin: 2rem auto 0; text-align: center;">
            <p style="font-size: 1.3rem; font-weight: 600; font-style: italic; color: var(--color-teal); line-height: 1.6;">
                {founders.closingQuote}
            </p>
        </div>
    </div>
</section>

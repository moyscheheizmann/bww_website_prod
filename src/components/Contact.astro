---
import siteData from '../content/site/general.json';
const { contact } = siteData;
const addressLines = contact.address.split('\n');
---

<section class="contact" id="contact">
    <div class="container">
        <h2 class="section-title text-raisin">Kontakt</h2>
        <div class="contact-content">
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt text-apricot"></i>
                    <div>
                        <h3>Adresse</h3>
                        <p>{addressLines.map((line, i) => <>{i > 0 && <br />}{line}</>)}</p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone text-apricot"></i>
                    <div>
                        <h3>Telefon</h3>
                        <p>{contact.phone}</p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-envelope text-apricot"></i>
                    <div>
                        <h3>E-Mail</h3>
                        <p>{contact.email}</p>
                    </div>
                </div>
            </div>
            <div class="contact-form">
                <h3>Schreib uns</h3>
                <form name="contact" method="POST" data-netlify="true">
                    <input type="hidden" name="form-name" value="contact">
                    <input type="text" name="name" placeholder="Dein Name" class="form-input">
                    <input type="email" name="email" placeholder="Deine E-Mail" class="form-input">
                    <textarea name="message" placeholder="Deine Nachricht" rows="5" class="form-input"></textarea>
                    <button type="submit" class="btn btn-apricot">Nachricht senden</button>
                </form>
            </div>
        </div>
    </div>
</section>

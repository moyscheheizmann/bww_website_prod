---
import siteData from '../content/site/general.json';
const { contact } = siteData;
const addressLines = contact.address.split('\n');
---

<section class="contact" id="contact">
    <div class="container">
        <h2 class="section-title text-raisin">Anfahrt</h2>
        <div class="contact-content">
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt text-apricot"></i>
                    <div>
                        <h3>Adresse</h3>
                        <p>{addressLines.map((line, i) => <>{i > 0 && <br />}{line}</>)}</p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone text-apricot"></i>
                    <div>
                        <h3>Telefon</h3>
                        <p>{contact.phone}</p>
                    </div>
                </div>
                <div class="contact-item">
                    <i class="fas fa-envelope text-apricot"></i>
                    <div>
                        <h3>E-Mail</h3>
                        <p>{contact.email}</p>
                    </div>
                </div>
            </div>
            <div class="contact-map" aria-label="Karte â€“ Bewegungswelten Studios">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2369.695766652606!2d9.9215921!3d53.563198199999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47b185ba81ce3da1%3A0xc96651867db5fae1!2sBewegungswelten%20Studios!5e0!3m2!1sen!2sde!4v1755353270496!5m2!1sen!2sde"
                    width="100%"
                    height="420"
                    style="border:0;"
                    allowfullscreen
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"
                ></iframe>
            </div>
        </div>
    </div>
</section>
